package ch13;

public class Student {
	String studentName;
	int money;

	public Student(String studentName, int money) {
		this.studentName = studentName;
		this.money = money;
	}
	
	public void take(Bus bus) {
		bus.money += money;
		bus.passengerCount++;
	}
	
	public void take(Subway subway) {
		subway.money += money;
		subway.passengerCount++;
	}
	
	
}
